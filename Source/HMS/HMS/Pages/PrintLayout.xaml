<Page x:Class="HMS.Pages.PrintLayout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HMS.Pages"
      mc:Ignorable="d" 
      Width="21cm" Height="29.7cm"
      x:Name="PrintLayoutPage">

    <StackPanel>
        <Grid x:Name="PrintGrid" Margin="7cm,7cm,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
        </Grid>
        <Grid HorizontalAlignment="Right" Margin="0,3cm,2cm,4cm" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="ConsultantName" FontSize="18" Text="Dr. Doctor" HorizontalAlignment="Center" Grid.Row="0"/>
            <TextBlock x:Name="ConsultantNo" FontSize="14" Text="MCI No: 1234" HorizontalAlignment="Center" Grid.Row="1"/>
        </Grid>
    </StackPanel>
</Page>
