<Page x:Class="HMS.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HMS.Pages"
      mc:Ignorable="d" 
      MinHeight="800" MinWidth="800"
      Title="Home">
    <Grid>
        <Button x:Name="BtnRegister" Content="Register a patient" HorizontalAlignment="Center" Margin="0,70,0,0" Padding="5" VerticalAlignment="Top" Width="auto" Click="BtnRegister_Click"/>
        <Button x:Name="BtnPrescription" Content="Write a prescription" HorizontalAlignment="Center" Margin="0,130,0,0" Padding="5" VerticalAlignment="Top" Width="auto" Click="BtnPrescription_Click"/>
        <Button x:Name="BtnSettings"  HorizontalAlignment="Center" Margin="0,190,0,0" Padding="5" VerticalAlignment="Top" Width="auto" Click="BtnSettings_Click"/>
    </Grid>
</Page>
