<Page x:Class="HMS.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HMS.Pages"
      mc:Ignorable="d" 
      MinHeight="800" MinWidth="800"
      Title="Home">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="BtnRegister" Content="Register a patient" HorizontalAlignment="Center" Padding="5" Margin="0,10,0,10" VerticalAlignment="Center" Width="auto" Click="BtnRegister_Click" Grid.Row="0"/>
        <Button x:Name="BtnPrescription" Content="Write a prescription" HorizontalAlignment="Center" Padding="5" Margin="0,10,0,10" VerticalAlignment="Center" Width="auto" Click="BtnPrescription_Click" Grid.Row="1"/>
        <Button x:Name="BtnSettings"  Content ="Congifure Settings" HorizontalAlignment="Center" Padding="5" Margin="0,10,0,10" VerticalAlignment="Center" Width="auto" Click="BtnSettings_Click" Grid.Row="2"/>
    </Grid>
</Page>
